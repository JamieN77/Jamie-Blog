                </div>
                <div class="col-lg-8 mb-5 mb-lg-0">
                    <div class="row">
                        <% posts.forEach((post)=> { %>
                            <div class="col-md-6 mb-4 post">
                                <article class="card article-card article-card-sm h-100">
                                    <a href="/article/<%= post.id %>">
                                        <div class="card-image">
                                            <div class="post-info"> <span class="text-uppercase">
                                                    <%= post.date %>
                                                </span>
                                            </div>
                                            <img loading="lazy" decoding="async" src="<%= post.imagePath %>"
                                                alt="Post Thumbnail" class="w-100" width="420" height="280">
                                        </div>
                                    </a>
                                    <div class="card-body px-0 pb-0">
                                        <h2><a class="post-title" href="/article/<%= post.id %>">
                                                <%= post.title %>
                                            </a></h2>
                                        <p class="card-text">
                                            <%= post.content.length> 100 ? post.content.substring(0, 100) + '...' :
                                                post.content %>
                                        </p>
                                        <div class="edit-link">
                                            <a class="read-more-btn" href="/edit/<%= post.id %>">Edit</a>
                                            <form action="/delete/<%= post.id %>" method="post">
                                                <button type="submit" onclick="return confirmDelete()"
                                                    class="btn btn-danger">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </article>
                            </div>
                            <% }); %>
